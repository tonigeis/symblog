{% extends 'adminbase.html.twig' %}

{% block body %}
    <h1>Blog</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ blog.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ blog.title }}</td>
            </tr>
            <tr>
                <th>Author</th>
                <td>{{ blog.author }}</td>
            </tr>
            <tr>
                <th>Blog</th>
                <td>{{ blog.blog }}</td>
            </tr>
            <tr>
                <th>Image</th>
                <td>{{ blog.image }}</td>
            </tr>
            <tr>
                <th>Tags</th>
                <td>{{ blog.tags }}</td>
            </tr>
            <tr>
                <th>Slug</th>
                <td>{{ blog.slug }}</td>
            </tr>
            <tr>
                <th>Created</th>
                <td>{% if blog.created %}{{ blog.created|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Updated</th>
                <td>{% if blog.updated %}{{ blog.updated|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('adminblog_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('adminblog_edit', { 'id': blog.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
